{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node", "jest"],
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true
